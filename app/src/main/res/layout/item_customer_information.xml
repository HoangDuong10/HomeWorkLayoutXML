<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".fragment.NotFinalizedFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/define_dimen_8"
        app:cardCornerRadius="@dimen/define_dimen_36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAvata"
            android:layout_width="@dimen/define_dimen_32"
            android:layout_height="@dimen/define_dimen_32"
            android:src="@drawable/ic_avata" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/define_dimen_8"
        android:text="Dương"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/cardView"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView" />

    <ImageView
        android:id="@+id/ivPhone"
        android:layout_width="@dimen/define_dimen_16"
        android:layout_height="@dimen/define_dimen_16"
        android:src="@drawable/ic_phone"
        app:layout_constraintBottom_toBottomOf="@id/cardView"
        app:layout_constraintLeft_toRightOf="@+id/ivHome"
        app:layout_constraintTop_toTopOf="@+id/cardView"
        app:tint="@color/green" />

    <ImageView
        android:id="@+id/ivFlag"
        android:layout_width="@dimen/define_dimen_16"
        android:layout_height="@dimen/define_dimen_16"
        android:src="@drawable/ic_flag"
        app:layout_constraintBottom_toBottomOf="@id/cardView"
        app:layout_constraintLeft_toRightOf="@+id/ivPhone"
        app:layout_constraintTop_toTopOf="@+id/cardView"
        app:tint="@color/green" />

    <ImageView
        android:id="@+id/ivImportant"
        android:layout_width="12dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintBottom_toBottomOf="@id/cardView"
        app:layout_constraintLeft_toRightOf="@+id/ivFlag"
        app:layout_constraintTop_toTopOf="@+id/cardView"
        app:tint="@color/green" />

    <ImageView
        android:id="@+id/ivHome"
        android:layout_width="@dimen/define_dimen_16"
        android:layout_height="@dimen/define_dimen_16"
        android:layout_marginStart="@dimen/define_dimen_4"
        android:src="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="@id/cardView"
        app:layout_constraintLeft_toRightOf="@+id/tvName"
        app:layout_constraintTop_toTopOf="@+id/cardView"
        app:tint="@color/green" />

    <TextView
        android:id="@+id/tvTagName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/define_dimen_4"
        android:background="@color/grey"
        android:padding="@dimen/define_dimen_2"
        android:text="Mua nhiều"
        android:textSize="@dimen/text_size_xsmall"
        app:layout_constraintBottom_toBottomOf="@id/cardView"
        app:layout_constraintEnd_toStartOf="@+id/tvQuantityTag"
        app:layout_constraintTop_toTopOf="@+id/cardView" />

    <TextView
        android:id="@+id/tvQuantityTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/define_dimen_4"
        android:background="@color/grey"
        android:padding="@dimen/define_dimen_2"
        android:text="+ 3"
        android:textSize="@dimen/text_size_xsmall"
        app:layout_constraintBottom_toBottomOf="@id/cardView"
        app:layout_constraintEnd_toStartOf="@id/tvAddTag"
        app:layout_constraintTop_toTopOf="@+id/cardView" />

    <TextView
        android:id="@+id/tvAddTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/define_dimen_8"
        android:background="@drawable/shape_gray_stroke"
        android:padding="@dimen/define_dimen_2"
        android:text="+ Tag"
        android:textSize="@dimen/text_size_xsmall"
        app:layout_constraintBottom_toBottomOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrantLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_8"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCicle1"
            android:layout_width="@dimen/define_dimen_10"
            android:layout_height="@dimen/define_dimen_10"
            android:layout_marginStart="@dimen/define_dimen_8"
            android:layout_marginTop="@dimen/define_dimen_6"
            android:src="@drawable/ic_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray" />

        <TextView
            android:id="@+id/tvTitle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/define_dimen_4"
            android:paddingBottom="@dimen/define_dimen_12"
            android:text="Có thử hàng hàng không shop ?"
            android:textColor="@color/black"
            android:textSize="@dimen/define_dimen_16"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout1"
            app:layout_constraintStart_toEndOf="@+id/ivCicle1"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/define_dimen_4"
            android:layout_marginEnd="@dimen/define_dimen_8"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPrint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_print" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCheck1"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check" />
        </LinearLayout>

        <com.example.layout.widget.DividerView
            android:layout_width="@dimen/define_dimen_10"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/define_dimen_8"
            android:layerType="software"
            app:color="@color/gray"
            app:dashGap="@dimen/define_dimen_2"
            app:dashLength="@dimen/define_dimen_6"
            app:dashThickness="0.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivCicle1"
            app:orientation="vertical" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrantLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constrantLayout1">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCicle2"
            android:layout_width="@dimen/define_dimen_10"
            android:layout_height="@dimen/define_dimen_10"
            android:layout_marginStart="@dimen/define_dimen_8"
            android:layout_marginTop="@dimen/define_dimen_6"
            android:src="@drawable/ic_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray" />

        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/define_dimen_4"
            android:paddingBottom="@dimen/define_dimen_12"
            android:text="Bình luận đã xóa"
            android:textColor="@color/black"
            android:textSize="@dimen/define_dimen_16"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
            app:layout_constraintStart_toEndOf="@+id/ivCicle2"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/define_dimen_4"
            android:layout_marginEnd="@dimen/define_dimen_8"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPrint2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_print" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCheck2"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:src="@drawable/ic_check" />
        </LinearLayout>

        <com.example.layout.widget.DividerView
            android:layout_width="@dimen/define_dimen_10"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/define_dimen_8"
            android:layerType="software"
            app:color="@color/gray"
            app:dashGap="@dimen/define_dimen_2"
            app:dashLength="@dimen/define_dimen_6"
            app:dashThickness="0.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivCicle2"
            app:orientation="vertical" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrantLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constrantLayout2">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCicle3"
            android:layout_width="@dimen/define_dimen_10"
            android:layout_height="@dimen/define_dimen_10"
            android:layout_marginStart="@dimen/define_dimen_8"
            android:layout_marginTop="@dimen/define_dimen_6"
            android:src="@drawable/ic_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray" />

        <TextView
            android:id="@+id/tvTitle3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/define_dimen_4"
            android:paddingBottom="@dimen/define_dimen_12"
            android:text="A123345 có ship ngay trong hôm nay được không em nhỉ? "
            android:textColor="@color/black"
            android:textSize="@dimen/define_dimen_16"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
            app:layout_constraintStart_toEndOf="@+id/ivCicle3"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/define_dimen_4"
            android:layout_marginEnd="@dimen/define_dimen_8"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPrint3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_print" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCheck3"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constrantLayout3"
            >
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_thunder"
                    app:tint="@color/green"/>
                <TextView
                    android:layout_marginStart="8dp"
                    android:padding="@dimen/define_dimen_8"
                    android:background="@drawable/shape_white_bg_gray_stoke_corner_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:text="Cho shop xin số điện thoại và địa chỉ ạ"/>

                <TextView
                    android:layout_marginStart="@dimen/define_dimen_8"
                    android:padding="@dimen/define_dimen_8"
                    android:background="@drawable/shape_white_bg_gray_stoke_corner_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:text="Cho shop xin số điện thoại và địa chỉ ạ"/>

                <TextView
                    android:layout_marginStart="@dimen/define_dimen_8"
                    android:padding="@dimen/define_dimen_8"
                    android:background="@drawable/shape_white_bg_gray_stoke_corner_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:text="Cho shop xin số điện thoại và địa chỉ ạ"/>
            </LinearLayout>
        </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/define_dimen_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollView">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_dot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_grey_bg_corner_30"
            android:hint="Nhập tin nhắn"
            android:padding="@dimen/define_dimen_10" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPrint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/define_dimen_8"
            android:background="@color/grey"
            android:paddingHorizontal="@dimen/define_dimen_4"
            android:src="@drawable/ic_print" />

        <TextView
            android:id="@+id/btnCompleteOrder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/define_dimen_8"
            android:layout_marginEnd="8dp"
            android:background="@color/grey"
            android:gravity="center"
            android:paddingHorizontal="@dimen/define_dimen_8"
            android:text="Chốt đơn"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="normal" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>